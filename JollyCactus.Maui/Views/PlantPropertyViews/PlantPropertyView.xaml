<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:JollyCactus.Maui.Model"
             xmlns:controls="clr-namespace:JollyCactus.Maui.Views.PropertyViews"
             x:Class="JollyCactus.Maui.Views.PropertyViews.PlantPropertyView">

    <ContentView.Resources>
        <ControlTemplate x:Key="PropertyString">
            <VerticalStackLayout>
                <Entry Text="{Binding Value, Mode=TwoWay}"/>
            </VerticalStackLayout>
        </ControlTemplate>
        <ControlTemplate x:Key="PropertyDate">
            <VerticalStackLayout>
                <DatePicker Date="{Binding Value, Mode=TwoWay}" />
            </VerticalStackLayout>
        </ControlTemplate>

        

    </ContentView.Resources>

    <VerticalStackLayout>
    </VerticalStackLayout>

</ContentView>
